doctype html
html class="#{params[:controller]}-#{params[:action]}"
  head
    title DevTrain :: Professional web developer training in Green Bay, WI

    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags

  body class=(body_class + (@fixed_footer ? ' footer-fixed' : ''))
    = render 'navigation'

    - if devise_controller?
      .row
        .medium-6.medium-offset-3.columns
          .panel.devise-container
            = yield
    - else
      = yield

    = render 'footer'

    = javascript_include_tag 'application'
